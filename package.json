{
  "name": "gentleman",
  "version": "0.2.2",
  "description": "Gentleman is a web-based projectionnal editor generator. It allows you to express and interact with your DSL.",
  "private": true,
  "directories": {
    "doc": "./docs",
    "src": "./src",
    "test": "./features"
  },
  "scripts": {
    "pretest": "babel src -d build",
    "test": "nyc cucumber-js",
    "posttest": "rimraf ./build",
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --config webpack.dev.js",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "cross-env NODE_ENV=production webpack --config webpack.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geodes-sms/gentleman.git"
  },
  "keywords": [
    "projectionnal-editor",
    "mde",
    "dsl",
    "js"
  ],
  "author": "Louis-Edouard LAFONTANT",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/geodes-sms/gentleman/issues"
  },
  "homepage": "https://github.com/geodes-sms/gentleman#readme",
  "dependencies": {
    "chai": "^4.1.2",
    "cucumber": "^5.0.2",
    "jsdom": "^13.0.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "clean-css": "^4.2.1",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "loader-utils": "^1.1.0",
    "nyc": "^13.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
