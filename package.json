{
  "name": "gentleman",
  "version": "0.1.4",
  "description": "Gentleman is a web-based projectionnal editor generator. It allows you to express and interact with your DSL.",
  "private": true,
  "directories": {
    "doc": "./docs",
    "src": "./src",
    "test": "./features"
  },
  "scripts": {
    "test": "nyc cucumber-js --require-module @babel/register",
    "start": "cross-env NODE_ENV=development webpack-dev-server --open 'chrome' --config webpack.dev.js",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "cross-env NODE_ENV=production webpack --config webpack.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geodes-sms/gentleman.git"
  },
  "keywords": [
    "projectionnal-editor",
    "mde",
    "dsl",
    "js"
  ],
  "author": "Louis-Edouard LAFONTANT",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/geodes-sms/gentleman/issues"
  },
  "homepage": "https://github.com/geodes-sms/gentleman#readme",
  "dependencies": {
    "zenkai": "^0.9.17",
    "dragula": "3.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "clean-css": "^4.2.1",
    "codecov": "^3.6.1",
    "cross-env": "^5.2.1",
    "css-loader": "^1.0.1",
    "cucumber": "^5.1.0",
    "jsdom": "^13.2.0",
    "loader-utils": "^1.2.3",
    "nyc": "^14.1.1",
    "rimraf": "^2.7.1",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  }
}
