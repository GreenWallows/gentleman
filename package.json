{
  "name": "gentleman",
  "version": "0.2.0",
  "description": "Gentleman is a web-based projectionnal editor generator. It allows you to express and interact with your DSL.",
  "private": true,
  "directories": {
    "doc": "./docs",
    "src": "./src"
  },
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "start": "cross-env NODE_ENV=development webpack serve --config webpack.dev.js",
    "test": "cross-env NODE_ENV=test nyc mocha test/**/*.spec.js",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geodes-sms/gentleman.git"
  },
  "keywords": [
    "projectionnal-editor",
    "mde",
    "dsl",
    "js"
  ],
  "author": "Louis-Edouard LAFONTANT",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/geodes-sms/gentleman/issues"
  },
  "homepage": "https://github.com/geodes-sms/gentleman#readme",
  "dependencies": {
    "zenkai": "^0.10.0",
    "dragula": "3.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/register": "^7.12.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.2.0",
    "clean-css": "^4.2.3",
    "coffeescript": "^2.5.1",
    "codecov": "^3.8.1",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "file-loader": "^6.2.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "loader-utils": "^2.0.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.4.0"
  }
}
