{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ],
      "@zenkai/*": [
        "./lib/zenkai/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@global/*": [
        "./src/global/*"
      ],
      "@editor/*": [
        "./src/editor/*"
      ],
      "@model/*": [
        "./src/model/*"
      ],
      "@projection/*": [
        "./src/projection/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ]
}