{
    "music": {
        "name": "music",
        "attr": {
            "libname": { "name": "libname", "type": "string" }
        },
        "composition": [
            {
                "name": "Artist",
                "position": 1,
                "attr": {
                    "artists": { "name": "artists", "type": "artist", "multiple": true }
                },
                "representation": { 
                    "type": "text", 
                    "k1": { "type": "keyword", "val": "Artist", "style": "title" },
                    "val": "$k1 #artists" 
                }
            }
        ],
        "representation": { 
            "type": "text", 
            "k1": { "type": "keyword", "val": "Music library", "style": "title" },
            "val": "$k1 #libname $composition" 
        }
    },
    "album": {
        "name": "album",
        "attr": {
            "name": { "name": "name", "type": "string" },
            "artwork": { "name": "artwork", "type": "url", "optional": true },
            "releaseDate": { "name": "releaseDate", "type": "date", "optional": true },
            "artists": { "name": "artists", "type": "albumArtist", "bind": "album", "multiple": true }
        },
        "composition": [
            {
                "name": "songs",
                "position": 1,
                "attr": {
                    "songs": { "name": "songs", "type": "albumSong", "multiple": true, "inline": false }
                },
                "representation": { "type": "text", "val": "#songs" }
            }
        ],
        "assoc": {
            "account": { "type": "composition", "multiplicity": "1" }
        },
        "representation": { "type": "text", "val": "#name #artists &NL $composition" }
    },
    "albumArtist": {
        "name": "albumArtist",
        "attr": {
            "artist": { "name": "artist", "type": "string", "src": "artist" },
            "role": { "name": "role", "type": "string" }
        },
        "representation": { "type": "text", "val": "#artist - #role" }
    },
    "albumSong": {
        "name": "albumSong",
        "attr": {
            "song": { "name": "song", "type": "song" },
            "number": { "name": "number", "type": "integer" }
        },
        "representation": { "type": "text", "val": "#number - #song" }
    },
    "song": {
        "name": "song",
        "attr": {
            "title": { "name": "title", "type": "string" },
            "genre": { "name": "genre", "type": "string", "base": "genre", "optional": true },
            "length": { "name": "length", "type": "integer", "optional": true },
            "releaseDate": { "name": "releaseDate", "type": "date", "optional": true },
            "artists": { "name": "artists", "type": "artistBase", "multiple": true }
        },
        "representation":{
            "type": "text",
            "g1": { "type": "group", "val": "#genre #releaseDate" },
            "val": "#title [#length] (#releaseDate) $g1 &NL #artists"
        }
    },
    "artistBase": {
        "name": "artist",
        "attr": {
            "id": { "name": "id", "type": "ID" },
            "name": { "name": "name", "type": "string" },
            "url": { "name": "url", "type": "url" }
        },
        "representation": { "type": "text", "val": "#id #name" }
    },
    "artist": {
        "name": "artist",
        "base": "artistBase",
        "composition": [
            {
                "name": "Album",
                "position": 1,
                "optional": true,
                "attr": {
                    "albums": { "name": "albums", "type": "album", "multiple": true }
                },
                "representation": { "type": "text", "val": "#albums"}
            }
        ],
        "representation": { "type": "text", "val": "#id #name $composition" }
    },
    "date": {
        "name": "date",
        "type": "data-type",
        "base": "date",
        "format": "yyyy mm dd"
    },
    "genre": {
        "type": "enum",
        "values": {
            "alternative": { "val": "Alternative" },
            "anime": { "val": "Anime" },
            "arabic": { "val": "Arabic" },
            "blues": { "val": "Blues" },
            "children_music": { "val": "Childen's Music" },
            "chinese": { "val": "Chinese" },
            "classical": { "val": "Classical" },
            "country": { "val": "Country" },
            "cuban": { "val": "Cuban" },
            "easy_listening": { "val": "Easy Listening" },
            "electronic": { "val": "Electronic" },
            "enka": { "val": "Enka" },
            "folk": { "val": "Folk" },
            "musique_francophone": { "val": "Musique francophone" },
            "hip-hop_rap": { "val": "Hip-Hop/Rap" },
            "holiday": { "val": "Holiday" },
            "indian": { "val": "Indian" },
            "instrumental": { "val": "Instrumental" },
            "jazz": { "val": "Jazz" },
            "konpa": { "val": "Konpa" }
        }
    },
    "@root": "music",
    "@config": {
        "language": "MusicLibary",
        "settings": {
            "autosave": true
        }
    },
    "@style": {
        "quote": { "before": "<", "after": ">" },
        "appColor": { "color": "blue" },
        "title": { "color": "#555", "fontSize": 15, "background": "$appColor" },
        "baseColor": { "target": "keyword", "prop": { "color": "rgb(234,218,198)" } }
    },
    "@resources": ["music.css"]
}