{
    "project": {
        "nature": "concrete",
        "idref": "short_name",
        "attribute": {
            "short_name": {
                "alias": "short name",
                "target": "string",
                "unique": true
            },
            "name": {
                "target": "string"
            }
        },
        "component": {
            "screening_section": {
                "required": true,
                "idref": "screen_action",
                "attribute": {
                    "screen_action": {
                        "target": "string",
                        "unique": true,
                        "required": false
                    },
                    "screening": {
                        "target": "screening"
                    }
                },
                "projection": [
                    {
                        "type": "stack",
                        "orientation": "vertical",
                        "layout": [
                            "SCREENING #screen_action",
                            "#screening"
                        ]
                    }
                ]
            },
            "qa_section": {
                "alias": "Question/Answer section",
                "required": false,
                "idref": "qa_action",
                "attribute": {
                    "qa_action": {
                        "target": "string",
                        "unique": true,
                        "required": false
                    },
                    "quality_assess": {
                        "target": "set",
                        "accept": "qa",
                        "min": 0
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "QA #qa_action #quality_assess"
                    }
                ]
            },
            "data_section": {
                "alias": "Data extraction section",
                "idref": "class_action",
                "attribute": {
                    "class_action": {
                        "target": "string",
                        "unique": true,
                        "required": false
                    },
                    "category": {
                        "target": "set",
                        "accept": "category"
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "DATA EXTRACTION #class_action #category"
                    }
                ]
            },
            "report_section": {
                "alias": "Report section",
                "required": false,
                "attribute": {
                    "reporting": {
                        "target": "set",
                        "accept": "report",
                        "min": 0
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "SYNTHESIS #reporting"
                    }
                ]
            }
        },
        "constraint": {
            "PRESENCE": "C[2] => C[3]"
        },
        "projection": [
            {
                "type": "stack",
                "orientation": "vertical",
                "element": {
                    "header": {
                        "type": "wrap",
                        "layout": "PROJECT #short_name #name"
                    }
                },
                "layout": [
                    "$header",
                    "#screening_section:component"
                ]
            }
        ],
        "encoding": {
            "default": {
                "format": "relis",
                "value": "$k1 #short_name #name ##compo ##compo[screening_section] ##compo[1|..|2|4..6]"
            },
            "alternative": {
                "format": "relis",
                "value": "$k1 #short_name #name #!EACH:listing"
            },
            "XML": {
                "format": "xml",
                "value": "<#short_name name='#name'>$composition</$short_name>"
            }
        }
    },
    "screening": {
        "nature": "concrete",
        "component": {
            "reviews": {
                "attribute": {
                    "review_per_paper": {
                        "target": "number",
                        "value": "2",
                        "projection": [
                            {
                                "type": "field",
                                "placeholder": "Review per paper",
                                "view": "textbox"
                            }
                        ]
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Reviews #review_per_paper"
                    }
                ]
            },
            "conflict": {
                "attribute": {
                    "conflict_type": {
                        "target": "conflictType"
                    },
                    "conflict_resolution": {
                        "target": "conflictResolution",
                        "value": "unanimity"
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Conflict on #conflict_type resolved by #conflict_resolution"
                    }
                ]
            },
            "criteria": {
                "keyword": "Criteria",
                "attribute": {
                    "exclusion_criteria": {
                        "target": "set",
                        "accept": "string",
                        "min": 1
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Criteria = [#exclusion_criteria]"
                    },
                    {
                        "type": "table",
                        "disposition": "column",
                        "layout": {
                            "header": "Title|List of fields|Description",
                            "cell": "title|fields|description",
                            "multiple": true
                        }
                    },
                    {
                        "type": "table",
                        "disposition": "column",
                        "layout": {
                            "cell": [
                                {
                                    "header": "Title",
                                    "value": "#title"
                                },
                                {
                                    "header": "List of fields",
                                    "value": "#fields"
                                },
                                {
                                    "header": "Description",
                                    "value": "#description"
                                }
                            ],
                            "multiple": true
                        }
                    }
                ]
            },
            "sources": {
                "keyword": "Sources",
                "required": true,
                "attribute": {
                    "source_papers": {
                        "target": "set",
                        "accept": {
                            "target": "string",
                            "alias": "source"
                        }
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Sources = [#source_papers]"
                    }
                ]
            },
            "strategies": {
                "keyword": "Strategies",
                "required": false,
                "attribute": {
                    "search_strategy": {
                        "target": "set",
                        "accept": "string"
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "$keyword = [#search_strategy]"
                    }
                ]
            },
            "validation": {
                "required": false,
                "attribute": {
                    "validation_percentage": {
                        "target": "number",
                        "value": "20",
                        "min": 0,
                        "max": 100
                    },
                    "validation_assignment_mode": {
                        "target": "assignmentMode",
                        "value": "normal",
                        "required": false
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Validation #validation_percentage% #validation_assignment_mode"
                    }
                ]
            },
            "phases": {
                "keyword": "Phases",
                "required": false,
                "attribute": {
                    "phases": {
                        "target": "set",
                        "accept": "phase"
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Phases #phases"
                    }
                ]
            }
        },
        "projection": [
            {
                "type": "stack",
                "orientation": "vertical",
                "layout": [
                    "#reviews:component",
                    "#conflict:component",
                    "#criteria:component"
                ]
            }
        ]
    },
    "phase": {
        "nature": "concrete",
        "attribute": {
            "title": {
                "target": "string"
            },
            "description": {
                "target": "string",
                "required": false
            },
            "fields": {
                "target": "set",
                "accept": "field"
            }
        },
        "projection": [
            {
                "type": "wrap",
                "layout": "#title #description Fields (#fields)"
            },
            {
                "type": "table",
                "disposition": "column",
                "layout": {
                    "header": "Title|List of fields|Description",
                    "cell": "title|fields|description",
                    "multiple": true
                }
            },
            {
                "type": "table",
                "disposition": "column",
                "layout": {
                    "cell": [
                        {
                            "header": "Title",
                            "value": "#title"
                        },
                        {
                            "header": "List of fields",
                            "value": "#fields"
                        },
                        {
                            "header": "Description",
                            "value": "#description"
                        }
                    ],
                    "multiple": true
                }
            }
        ]
    },
    "qa": {
        "nature": "concrete",
        "component": {
            "questions": {
                "attribute": {
                    "question": {
                        "target": "set",
                        "accept": "string"
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Questions [#question]"
                    }
                ]
            },
            "response": {
                "attribute": {
                    "response": {
                        "name": "response",
                        "target": "set",
                        "accept": "response"
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Response [#response]"
                    }
                ]
            },
            "min_score": {
                "attribute": {
                    "min_score": {
                        "target": "number"
                    }
                },
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Minimum score #min_score"
                    }
                ]
            }
        },
        "projection": [
            {
                "type": "wrap",
                "layout": "#[questions] #[response] #[min_score]"
            }
        ]
    },
    "response": {
        "nature": "concrete",
        "attribute": {
            "title": {
                "target": "string"
            },
            "score": {
                "target": "number"
            }
        },
        "projection": [
            {
                "type": "wrap",
                "layout": "#title:#score"
            }
        ]
    },
    "double": {
        "prototype": "number",
        "format": "[0-9]+([.][0-9]+)?"
    },
    "report": {
        "nature": "prototype",
        "idref": "name",
        "attribute": {
            "name": {
                "target": "string",
                "unique": true
            },
            "title": {
                "target": "string",
                "required": false
            },
            "value": {
                "target": "reference",
                "ref": "category"
            },
            "chart": {
                "target": "set",
                "accept": "graphType"
            }
        }
    },
    "simple_graph": {
        "nature": "concrete",
        "prototype": "report",
        "projection": [
            {
                "type": "wrap",
                "layout": "Simple #name #title on #value charts(#chart)"
            }
        ]
    },
    "compare_graph": {
        "nature": "concrete",
        "prototype": "report",
        "attribute": {
            "reference": {
                "name": "reference",
                "target": "reference",
                "accept": "category"
            }
        },
        "projection": [
            {
                "type": "wrap",
                "layout": "Compare #name #title on #value with #reference charts(#chart)"
            }
        ]
    },
    "category": {
        "nature": "prototype",
        "attribute": {
            "name": {
                "target": "string",
                "unique": true
            },
            "title": {
                "target": "string",
                "required": false
            },
            "mandatory": {
                "target": "boolean",
                "projection": {
                    "condition": "$value = true",
                    "layout": "*"
                },
                "value": true
            },
            "numberOfValues": {
                "target": "number",
                "required": false,
                "value": 1,
                "projection": {
                    "type": "text",
                    "textbox": {
                        "type": "field",
                        "view": "textbox"
                    },
                    "layout": "[$textbox]"
                }
            },
            "subCategory": {
                "name": "subCategory",
                "target": "set",
                "accept": "category",
                "required": false,
                "inline": false,
                "projection": {
                    "type": "text",
                    "field": {
                        "type": "field",
                        "view": "list"
                    },
                    "layout": [
                        "{",
                        "$field",
                        "}"
                    ]
                }
            }
        }
    },
    "freeCategory": {
        "nature": "concrete",
        "prototype": "category",
        "idref": "name",
        "attribute": {
            "type": {
                "target": "string"
            },
            "max_char": {
                "target": "number",
                "required": false,
                "projection": {
                    "type": "text",
                    "textbox": {
                        "type": "field",
                        "view": "textbox"
                    },
                    "layout": "($textbox)"
                }
            },
            "pattern": {
                "target": "string",
                "required": false,
                "projection": {
                    "type": "text",
                    "textbox": {
                        "type": "field",
                        "view": "textbox"
                    },
                    "layout": "style($textbox)"
                }
            },
            "initial_value": {
                "target": "string",
                "required": false,
                "projection": {
                    "type": "text",
                    "textbox": {
                        "type": "field",
                        "view": "textbox"
                    },
                    "layout": "= [$textbox]"
                }
            }
        },
        "projection": [
            {
                "type": "text",
                "layout": "Simple #name #title #numberOfValues : #type #max_char #pattern #initial_value #subCategory"
            },
            {
                "type": "text",
                "layout": "Simple #name #title #mandatory #numberOfValues : #type #max_char #pattern #initial_value #subCategory"
            }
        ]
    },
    "staticCategory": {
        "nature": "concrete",
        "prototype": "category",
        "idref": "name",
        "attribute": {
            "values": {
                "target": "set",
                "accept": "string"
            }
        },
        "projection": [
            {
                "type": "text",
                "layout": "List #name #title #numberOfValues = [#values] #subCategory"
            },
            {
                "type": "text",
                "layout": "List #name #title #mandatory #numberOfValues = [#values] #subCategory"
            }
        ]
    },
    "independantDynamicCategory": {
        "nature": "concrete",
        "prototype": "category",
        "idref": "name",
        "attribute": {
            "reference_name": {
                "target": "string",
                "required": false
            },
            "initial_values": {
                "target": "set",
                "accept": "string",
                "required": false,
                "projection": {
                    "type": "text",
                    "field": {
                        "type": "field",
                        "view": "list"
                    },
                    "flow": "horizontal",
                    "layout": [
                        "= [$field]"
                    ]
                }
            }
        },
        "projection": [
            {
                "type": "text",
                "layout": "DynamicList #name #title #numberOfValues #reference_name #initial_values #subCategory"
            },
            {
                "type": "text",
                "layout": "DynamicList #name #title #mandatory #numberOfValues #reference_name #initial_values #subCategory"
            }
        ]
    },
    "dependantDynamicCategory": {
        "nature": "concrete",
        "prototype": "category",
        "idref": "name",
        "attribute": {
            "depends_on": {
                "target": "reference",
                "accept": "category"
            }
        },
        "projection": [
            {
                "type": "text",
                "layout": "DynamicList #name #title #numberOfValues depends on #depends_on #subCategory"
            },
            {
                "type": "text",
                "layout": "DynamicList #name #title #mandatory #numberOfValues depends on #depends_on #subCategory"
            }
        ]
    },
    "simpleType": {
        "name": "simpleType",
        "type": "enum",
        "values": {
            "bool": "bool",
            "date": "date",
            "int": "int",
            "real": "real",
            "string": "string",
            "text": "text"
        }
    },
    "assignmentMode": {
        "name": "assignmentMode",
        "base": "string",
        "values": {
            "info": "Info",
            "normal": "Normal",
            "veto": "Veto"
        }
    },
    "conflictType": {
        "nature": "derivative",
        "base": "string",
        "values": [
            {
                "value": "exclusionCriteria",
                "alias": "Criteria",
                "projection": [
                    {
                        "type": "wrap",
                        "layout": "Criteria"
                    }
                ]
            },
            {
                "value": "includeExclude",
                "alias": "Decision"
            }
        ]
    },
    "conflictResolution": {
        "nature": "derivative",
        "base": "string",
        "values": [
            "majority",
            "unanimity"
        ]
    },
    "graphType": {
        "nature": "derivative",
        "base": "string",
        "values": [
            "bar",
            "line",
            "pie"
        ]
    },
    "field": {
        "nature": "derivative",
        "base": "string",
        "values": [
            "abstract",
            "bibtex",
            "link",
            "preview",
            "title"
        ]
    },
    "@root": "project",
    "@config": {
        "language": "ReLiS",
        "settings": {
            "autosave": true
        },
        "style": {
            "attribute": {
                "inline": true,
                "spacing": {
                    "before": "2px",
                    "after": "2px"
                }
            },
            "component": {
                "inline": false,
                "size": {
                    "width": "FIT_CONTENT"
                },
                "spacing": {
                    "before": "5px",
                    "after": "5px"
                },
                "corner": {},
                "background": "#f0f0f0"
            }
        }
    }
}